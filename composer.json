{
    "name": "arokettu/clock",
    "description": "PSR-20 Implementation",
    "keywords": ["clock", "psr-20"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me",
            "role": "developer",
            "homepage": "https://sandfox.me/"
        }
    ],
    "homepage": "https://sandfox.dev/php/clock.html",
    "support": {
        "issues": "https://gitlab.com/sandfox/php-clock/-/issues",
        "source": "https://gitlab.com/sandfox/php-clock",
        "docs": "https://arokettu-clock.readthedocs.io/",
        "chat": "https://gitter.im/arokettu/community"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "kylekatarnls/update-helper": false
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Arokettu\\Clock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arokettu\\Clock\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "arokettu/system-clock": "^2.0",
        "psr/clock": "^1.0"
    },
    "require-dev": {
        "nesbot/carbon": "^2",
        "phpunit/phpunit": "^9",
        "sandfox.dev/code-standard": "^1.2022.06.29",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^5"
    },
    "provide": {
        "psr/clock-implementation": "1.0"
    }
}
