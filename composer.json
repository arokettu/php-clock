{
    "name": "arokettu/clock",
    "description": "PSR-20 Implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me"
        }
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "kylekatarnls/update-helper": false
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Arokettu\\Clock\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arokettu\\Clock\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.0 | ^8.0",
        "arokettu/system-clock": "^2.0",
        "psr/clock": "^1.0"
    },
    "require-dev": {
        "nesbot/carbon": "^1 | ^2",
        "phpunit/phpunit": ">= 6.0.0 < 10",
        "psy/psysh": "*",
        "sandfox.dev/code-standard": "^1.2024.07.20",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^4 | ^5 | ^6"
    },
    "provide": {
        "psr/clock-implementation": "1.0"
    }
}
